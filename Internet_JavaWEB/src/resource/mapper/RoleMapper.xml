<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="com.txk.java.dao.RoleDao">
 
    <insert id="save" parameterType="role">  
     <![CDATA[   
         insert into  role (role_name,description, remark)
         values(#{role_name}, #{description}, #{remark})	
     ]]>
    </insert>
    <select id="getRole" parameterType="int" resultType="role">
    <![CDATA[   
    	select role_id,role_name,description,remark from role where role_id = #{id}
         ]]>
    </select>
</mapper>